{
   "description": "Infra Workbox",
   "provisioners": [
      {
         "type": "shell",
         "execute_command": "echo 'vagrant' | sudo -S sh '{{.Path}}'",
         "scripts": [
            "packer-scripts/00base.sh",
            "packer-scripts/01networking.sh",
            "packer-scripts/02sshd.sh",
            "packer-scripts/03vagrant.sh",
            "packer-scripts/04sudoers.sh",
            "packer-scripts/10ruby.sh",
            "packer-scripts/20terraform.sh",
            "packer-scripts/21packer.sh",
            "packer-scripts/22aws.sh",
            "packer-scripts/23docker.sh",
            "packer-scripts/24jdk.sh",
            "packer-scripts/31vagrant-ssh.sh",
            "packer-scripts/41serverspec.sh",
            "packer-scripts/90virtualbox.sh",
            "packer-scripts/99cleanup.sh",
            "packer-scripts/99minimize.sh"
         ]
      }
   ],
   "builders": [
      {
         "type": "virtualbox-iso",
         "virtualbox_version_file": ".vbox_version",

         "guest_os_type": "Ubuntu_64",
         "headless": true,
         "disk_size": 10240,
         "http_directory": "http",

         "iso_url": "http://releases.ubuntu.com/16.04/ubuntu-16.04-server-amd64.iso",
         "iso_checksum": "b8b172cbdf04f5ff8adc8c2c1b4007ccf66f00fc6a324a6da6eba67de71746f6",
         "iso_checksum_type": "sha256",

         "guest_additions_url": "{{user `guest_additions_url`}}",
         "guest_additions_mode": "attach",

         "ssh_username": "vagrant",
         "ssh_password": "vagrant",
         "ssh_port": 22,
         "ssh_wait_timeout": "15m",
         "shutdown_command": "sudo systemctl poweroff",

         "boot_wait": "5s",
         "boot_command": [
            "<enter><wait>",
            "<f6><esc>",
            "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
            "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
            "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
            "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
            "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
            "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
            "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
            "<bs><bs><bs><bs><bs><bs><bs><bs><bs><bs>",
            "<bs><bs><bs>",
            "/install/vmlinuz ",
            "initrd=/install/initrd.gz ",
            "net.ifnames=0 ",
            "auto-install/enable=true ",
            "debconf/priority=critical ",
            "preseed/url=http://{{.HTTPIP}}:{{.HTTPPort}}/ubuntu-16.04/preseed.cfg ",
            "<enter>"
         ],
         "vboxmanage": [
            [ "modifyvm", "{{.Name}}", "--memory", "512" ],
            [ "modifyvm", "{{.Name}}", "--cpus", "1" ]
         ]
      }
   ],
   "post-processors": [
      [
         {
            "type": "vagrant",
            "output": "infra-workbox.box",
            "keep_input_artifact": false
         },
         {
            "type": "atlas",
            "only": [ "virtualbox-iso" ],
            "artifact": "{{user `atlas_user`}}/infra-workbox",
            "token": "{{user `atlas_token`}}",
            "artifact": "kief/infra-workbox",
            "artifact_type": "vagrant.box",
            "metadata": {
              "provider": "virtualbox",
              "description": "Box for working locally on infra-lab",
              "created_at": "{{timestamp}}"
            }
         }
      ]
   ],
  "variables": {
      "guest_additions_url": "http://download.virtualbox.org/virtualbox/5.0.22/VBoxGuestAdditions_5.0.22.iso"
  }
}
