{
  "description": "Infra Workbox",
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "echo 'vagrant' | sudo -S sh '{{.Path}}'",
      "scripts": [
        "packer-scripts/00base.sh",
        "packer-scripts/01networking.sh",
        "packer-scripts/02sshd.sh",
        "packer-scripts/03vagrant.sh",
        "packer-scripts/04sudoers.sh",
        "packer-scripts/10apt.sh",
        "packer-scripts/11ruby.sh",
        "packer-scripts/20terraform.sh",
        "packer-scripts/21packer.sh",
        "packer-scripts/22aws.sh",
        "packer-scripts/23docker.sh",
        "packer-scripts/24jdk.sh",
        "packer-scripts/25gcloud.sh",
        "packer-scripts/31vagrant-ssh.sh",
        "packer-scripts/41serverspec.sh",
        "packer-scripts/81utils.sh",
        "packer-scripts/90virtualbox.sh",
        "packer-scripts/99cleanup.sh",
        "packer-scripts/99minimize.sh"
      ]
    }
  ],

  "builders": [
    {
      "name": "infra-workbox",

      "type": "virtualbox-iso",
      "virtualbox_version_file": ".vbox_version",
      "guest_additions_url": "http://download.virtualbox.org/virtualbox/{{.Version}}/VBoxGuestAdditions_{{.Version}}.iso",
      "guest_additions_mode": "attach",
      "guest_os_type": "Ubuntu_64",
      "headless": true,
      "disk_size": 10240,
      "http_directory": "http",

      "iso_url": "http://releases.ubuntu.com/14.04/ubuntu-14.04.5-server-amd64.iso",
      "iso_checksum": "dd54dc8cfc2a655053d19813c2f9aa9f",
      "iso_checksum_type": "md5",

      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "15m",
      "shutdown_command": "echo 'vagrant'| sudo -S shutdown -P now",

      "boot_wait": "10s",
      "boot_command": [
      "<esc><wait>",
      "<esc><wait>",
      "<enter><wait>",
      "/install/vmlinuz ",
      "initrd=/install/initrd.gz ",
      "biosdevname=0 ",
      "auto-install/enable=true ",
      "debconf/priority=critical ",
      "preseed/url=http://{{.HTTPIP}}:{{.HTTPPort}}/ubuntu-14.04.4/preseed.cfg ",
      "<enter>"
      ],

      "vboxmanage": [
        [ "modifyvm", "{{.Name}}", "--memory", "1024" ],
        [ "modifyvm", "{{.Name}}", "--cpus", "1" ]
      ]
    }
  ],
   "post-processors": [
      [
        {
          "type": "vagrant",
          "output": "{{build_name}}.box",
          "keep_input_artifact": false
        },
        {
          "type": "vagrant-cloud",
          "box_tag": "{{user `ATLAS_BUILD_SLUG`}}",
          "access_token": "{{user `VAGRANT_CLOUD_TOKEN`}}",
          "version": "1.{{user `ATLAS_BUILD_NUMBER`}}.{{user `ATLAS_BUILD_ID`}}"
        }
      ]
   ],
  "variables": {
      "guest_additions_url": "http://download.virtualbox.org/virtualbox/5.1.22/VBoxGuestAdditions_5.1.22.iso",
      "guest_additions_sha256": "54df14f234b6aa484b94939ab0f435b5dd859417612b65a399ecc34a62060380"
  }
}
